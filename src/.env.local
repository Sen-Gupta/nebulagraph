# Local Development Environment Configuration
# Use this when running Dapr and components on localhost (outside containers)

# NebulaGraph Configuration (localhost)
NEBULA_HOST=localhost
NEBULA_PORT=9669
NEBULA_USERNAME=root
NEBULA_PASSWORD=nebula
NEBULA_SPACE=dapr_state
NEBULA_CONNECTION_TIMEOUT=10s
NEBULA_EXECUTION_TIMEOUT=30s

# Redis Configuration (localhost)
REDIS_HOST=localhost:6379
REDIS_PASSWORD=dapr_redis
REDIS_DB=0

# Redis Connection Settings (optimized for local development)
REDIS_MAX_RETRIES=2
REDIS_MAX_RETRY_BACKOFF=1s
REDIS_DIAL_TIMEOUT=3s
REDIS_READ_TIMEOUT=2s
REDIS_WRITE_TIMEOUT=2s

# Redis Pool Settings (smaller pool for local)
REDIS_POOL_SIZE=5
REDIS_POOL_TIMEOUT=3s
REDIS_MAX_CONN_AGE=10m
REDIS_IDLE_TIMEOUT=2m
REDIS_IDLE_CHECK_FREQUENCY=30s

# Redis Pub/Sub Settings
REDIS_REDELIVER_INTERVAL=30s
REDIS_PROCESSING_TIMEOUT=10s
REDIS_TYPE=node
REDIS_ENABLE_TLS=false
